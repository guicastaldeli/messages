<?xml version="1.0" encoding="UTF-8"?>
<password-changed-email>
    <metadata>
        <div class="metadata">
            <div class="name">Password Changed Email</div>
            <div class="version">1.0</div>
            <div class="type">password-changed</div>
        </div>
    </metadata>
    <content>
        <div class="subject">Your {{appName}} Password Has Been Changed</div>
        <div class="preheader">Your password was successfully changed.</div>
        <div class="layout">
            <div class="email-wrapper">
                <div class="hero-section">
                    <h1 class="changed-title">Password Successfully Changed</h1>
                    <p class="changed-subtitle">Your password for {{appName}} has been successfully updated.</p>
                </div>
                <div class="info-section">
                    <h2 class="info-title">Change Details</h2>
                    <div class="info-grid">
                        <div class="info-card">
                            <span class="info-label">Account</span>
                            <div class="info-value">{{username}}</div>
                        </div>
                        <div class="info-card">
                            <span class="info-label">Time</span>
                            <div class="info-value">{{changeTime}}</div>
                        </div>
                    </div>
                </div>
                <div class="security-section">
                    <h3 class="security-title">Security Notice</h3>
                    <p class="security-text">
                        If you did not make this change, please contact support immediately 
                        and secure your account.
                    </p>
                    <a class="security-action" href="{{supportUrl}}">Contact Support</a>
                </div>
                <div class="email-footer">
                    <p class="footer-text">
                        Thank you for using {{appName}}.
                    </p>
                    <div class="footer-links">
                        <a class="footer-link" href="{{webUrl}}">Home</a>
                        <a class="footer-link" href="{{securityUrl}}">Security Tips</a>
                    </div>
                </div>
            </div>
        </div>
    </content>
</password-changed-email>