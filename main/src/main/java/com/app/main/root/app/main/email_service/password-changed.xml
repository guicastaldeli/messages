<?xml version="1.0" encoding="UTF-8"?>
<password-changed-email>
    <metadata>
        <name>Password Changed Email</name>
        <version>1.0</version>
        <type>password-changed</type>
    </metadata>
    <content>
        <subject>Your {{appName}} Password Has Been Changed</subject>
        <preheader>Your password was successfully changed.</preheader>
        <layout>
            <container class="email-wrapper">
                <div class="hero-section">
                    <h1 class="changed-title">Password Successfully Changed</h1>
                    <p class="changed-subtitle">Your password for {{appName}} has been successfully updated.</p>
                </div>
                <div class="info-section">
                    <h2 class="info-title">Change Details</h2>
                    <div class="info-grid">
                        <div class="info-card">
                            <span class="info-label">Account: {{username}}</span>
                        </div>
                        <div class="info-card">
                            <span class="info-label">Time: {{changeTime}}</span>
                        </div>
                    </div>
                </div>
                <div class="email-footer">
                    <p class="footer-text">
                        Thank you for using {{appName}}.
                    </p>
                    <div class="footer-links">
                        <a class="footer-link" href="{{webUrl}}">Home</a>
                    </div>
                </div>
            </container>
        </layout>
    </content>
</password-changed-email>